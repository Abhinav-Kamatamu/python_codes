import pygame
from pygame import *
from pygame.locals import *
from time import sleep
import random
import sys

width = 500
height = 500

yellow = (255, 247, 92)
darkYellow = (255, 242, 0)

gameOver = False

clock = pygame.time.Clock()

win = pygame.display.set_mode((500,500))
win.fill((255,255,255))

class Coordinate():

    def __init__(self,x,y):

        self.x = int(x)
        self.y = int(y)

    def Position(self):

        return self.x,self.y,25,25
        
class Snake():

    def __init__(self):

        self.side = 25
        self.headPosition = Coordinate(self.side * 9,self.side * 9)
        self.velocityX = 1
        self.velocityY = 0
        self.score = 1

    def updateSnake(self):

        sleep(0.2)

        self.headPosition.x += self.velocityX * self.side
        self.headPosition.y += self.velocityY * self.side

        win.fill((255,255,255))

        pygame.draw.rect(win,darkYellow,self.headPosition.Position())

        pygame.display.set_caption(f"Score:{self.score}")    

        pygame.display.update()

    def die(self):

        global gameOver    
    
        if (self.headPosition.x < 0) or (self.headPosition.x + self.side > width) or (self.headPosition.y < 0) or (self.headPosition.y + self.side > height):
            gameOver = True

snake = Snake()
        
while not gameOver:

    clock.tick(60)

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    keys = pygame.key.get_pressed()

    if keys[pygame.K_w] and snake.velocityY == 0 :
        snake.velocityX = 0
        snake.velocityY = -1
    if keys[pygame.K_a] and snake.velocityX == 0:
        snake.velocityX = -1
        snake.velocityY = 0
    if keys[pygame.K_s] and snake.velocityY == 0:
        snake.velocityX = 0
        snake.velocityY = 1
    if keys[pygame.K_d] and snake.velocityX == 0:
        snake.velocityX = 1
        snake.velocityY = 0    

    snake.updateSnake()
    snake.die()

pygame.display.set_caption("Game Over")

while True:

 for event in pygame.event.get():
    if event.type == pygame.QUIT:
        pygame.quit()
        sys.exit()
